@model HotelRoomBookingSystem.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Hotel Room Booking System</title>
    <!-- Include Bootstrap CSS link here -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Include custom CSS styles if needed -->
    <link href="~/Content/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-3 login-form">
                <h2 class="login-heading">Login</h2>
                @using (Html.BeginForm("LoginClick", "Home", FormMethod.Post))
                {
                    <form>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control",@placeholder="Enter Email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger small" })
                        </div>
                        <button type="submit" class="btn btn-primary btn-block login-btn-primary">Login</button>
                    </form>
                }
                    <div class="text-center mt-3">
                        <a href="#" class="login-link">Forgot Password?</a>
                    </div>
                    <div class="text-center mt-2">
                        <p>Don't have an account?@Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "login-link" }) </p>
                    </div>
                   
                </div>
        </div>
    </div>

    <!-- Include Bootstrap and jQuery scripts here -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

