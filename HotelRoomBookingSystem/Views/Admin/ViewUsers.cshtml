@using HotelRoomBookingSystem.Models
@{
    ViewBag.Title = "ViewUsers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>ViewUsers</h2>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>State</th>
                <th>City</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.DateOfBirth.ToShortDateString()</td>
                    <td>@user.Gender</td>
                    <td>@user.Phone</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.State</td>
                    <td>@user.City</td>
                    <td>@user.Password</td>
                </tr>
            }
        </tbody>
    </table>
</div>