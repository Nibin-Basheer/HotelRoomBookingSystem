@model HotelRoomBookingSystem.Models.Rooms

@{
    ViewBag.Title = "DeleteRoom";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Delete Room</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Are you sure you want to delete this room?</h3>

        <dl class="dl-horizontal">
            <dt>
                @Html.HiddenFor(model => model.RoomId)
            </dt>

            <dt>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomNumber)
            </dd>

            <!-- Include the room details here -->

        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Add check-in, checkout, adult, and children input fields -->
            <div class="form-group">
                <label for="checkinDate">Check-in Date</label>
                <input type="date" id="checkinDate" name="checkinDate" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="checkoutDate">Checkout Date</label>
                <input type="date" id="checkoutDate" name="checkoutDate" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="adultCount">Adults</label>
                <input type="number" id="adultCount" name="adultCount" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="childrenCount">Children</label>
                <input type="number" id="childrenCount" name="childrenCount" class="form-control" required>
            </div>

            <div class="form-actions no-color">
                @Html.ActionLink("Delete", "DeleteConfirmation", new { id = Model.RoomId }, new { @class = "btn btn-danger m-2" })
                @Html.ActionLink("Back to List", "GetAllRooms")
            </div>
        }
    </div>
</div>
