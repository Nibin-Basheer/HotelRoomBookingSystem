@{
    ViewBag.Title = "AdminHome";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5 p-2">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Booking</h5>
                    <p class="card-text">Manage bookings and reservations.</p>
                    <a href="#" class="btn btn-success">View Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Rooms</h5>
                    <p class="card-text">Total Rooms: @ViewBag.RoomCount</p>
                    @Html.ActionLink("Manage Rooms", "GetAllRooms","", new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
