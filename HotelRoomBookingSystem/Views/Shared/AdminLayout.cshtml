<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
   
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <style>
      

            .sidebar a {
                padding: 8px 8px 8px 16px;
                text-decoration: none;
                font-size: 18px;
                color: #fff; /* White link text */
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    color: #17a2b8;
                }

        .container-content {
            margin-left: 270px;
            padding: 15px;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .content {
            flex: 1;
        }

        footer {
           
            background-color: #f8f9fa; /
            text-align: center;
            padding: 10px;
            max-height:100%;
        }

        
    </style>



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Hotel Room Booking</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "AdminHome", "Admin", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Add Rooms", "AddRoom", "Admin", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("View Bookings", "AdminHome", "Admin", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Add Admins", "AdminAdd", "Admin", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("View Users", "ViewUsers", "Admin", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Logout", "AdminLogout", "Admin", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center text-black mt-3">
                    <h5>Follow Us</h5>
                    <a class="text-info " href="https://www.facebook.com/nibinb2"><i class="fa fa-facebook"></i></a>
                    <a class="text-info" href="https://www.instagram.com/nibin_e/"><i class="fa fa-instagram"></i></a>
                    <a class="text-info" href="https://www.linkedin.com/in/nibinbasheer"><i class="fa fa-linkedin"></i></a><br>
                    <p>&copy; @DateTime.Now.Year Hotel Room Booking System<br>Website designed by Nibin Basheer</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Include Bootstrap and jQuery scripts here -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
