
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">



</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Hotel Room Booking</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Login
                            </a>
                            <div class="dropdown-menu" aria-labelledby="loginDropdown">
                                <a class="dropdown-item" href="@Url.Action("Login", "Home")">User Login</a>
                                <a class="dropdown-item" href="@Url.Action("AdminLogin", "Admin")">Admin Login</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact Us", "ContactUs", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About Us", "AboutUs", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        @RenderBody() <!-- This is where the content of individual pages will be rendered -->
    </div>
    <footer class="bg-light">
        <div class="container">
            <div class="row">

                <div class="col-md-12 text-center text-black mt-3">
                    <h5>Follow Us</h5>
                    <a class="text-info " href="https://www.facebook.com/nibinb2"><i class="fa fa-facebook"></i></a>
                    <a class="text-info" href="https://www.instagram.com/nibin_e/"><i class="fa fa-instagram"></i></a>
                    <a class="text-info" href="https://www.linkedin.com/in/nibinbasheer"><i class="fa fa-linkedin"></i></a><br>
                    <p>&copy; @DateTime.Now.Year Hotel Room Booking System<br>Website designed by Nibin Basheer</p>

                </div>
            </div>
        </div>





    </footer>
    @*<p></p>*@
    <!-- Include Bootstrap and jQuery scripts here -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha384-xBuQ/xzmlsLoJpyjoggmTEz8OWUFM0/RC5BsqQBDX2v5cMvDHcMakNTNrHIW2I5f" crossorigin="anonymous"></script>











</body>
</html>
